<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemUpdateActivity">

    <TextView
        android:id="@+id/adminPcno"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/adminLabno"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/adminPcno"
        app:layout_constraintTop_toBottomOf="@+id/adminPcno" />

    <TextView
        android:id="@+id/adminStatus"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/adminLabno"
        app:layout_constraintTop_toBottomOf="@+id/adminLabno" />

    <TextView
        android:id="@+id/adminDate"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/adminStatus"
        app:layout_constraintTop_toBottomOf="@+id/adminStatus" />

    <TextView
        android:id="@+id/adminDesc"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/adminDate"
        app:layout_constraintTop_toBottomOf="@+id/adminDate" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="159dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/adminDesc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/adminDesc"
        app:layout_constraintTop_toBottomOf="@+id/adminDesc">

        <RadioButton
            android:id="@+id/radioSolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved" />

        <RadioButton
            android:id="@+id/radioNotSolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Solved"
            android:checked="true"/>
    </RadioGroup>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />
</androidx.constraintlayout.widget.ConstraintLayout>