<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LabInchargeAddProblem">

    <EditText
        android:id="@+id/inchargeDesc"
        android:layout_width="243dp"
        android:layout_height="85dp"
        android:ems="10"
        android:hint="Problem Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <EditText
        android:id="@+id/inchargePC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="PC NO"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inchargeDesc" />

    <Button
        android:id="@+id/inchargeSubmit"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginTop="172dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inchargePC" />

    <EditText
        android:id="@+id/inchargeLab"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Enter Lab No"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/inchargePC"
        app:layout_constraintTop_toBottomOf="@+id/inchargePC" />
</androidx.constraintlayout.widget.ConstraintLayout>